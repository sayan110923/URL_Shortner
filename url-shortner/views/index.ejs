  <body>
    <h1>URL Shortner</h1>
    <form action="/shortUrls" method="POST">
      <input type="url" name="fullUrl" placeholder="Enter full URL" required />
      <button type="submit">Shorten</button>
    </form>

    <!-- <h2>Shortened URLs</h2> -->
    <table>
      <tr>
        <th>Full URL</th>
        <th>Short URL</th>
        <th>Clicks</th>
      </tr>
      <% shortUrls.forEach(url => { %>
      <tr>
        <td><a href="<%= url.full %>" target="_blank"><%= url.full %></a></td>
        <td>
          <a href="/<%= url.short %>" target="_blank">/<%= url.short %></a>
        </td>
        <td><%= url.clicks %></td>
      </tr>
      <% }) %>
    </table>
  </body>
